<!-- Modal adding device -->
<div id="modal2" class="modal">
	<div class="modal-content">
		<h4>Ajouter un device</h4>
		<div class="row">
		 <form id="createdEdit" class="col s12">
			 <div class="row">
				 <div class="input-field col s12">
					 <input id="deviceName" name="name" type="text" style="text-transform: capitalize" class="validate">
					 <label for="deviceName">Device Name</label>
				 </div>
				 <div class="input-field col s12">
					 <input id="identifier" name="identifier" type="text" style="text-transform: uppercase" class="validate">
					 <label for="identifier">Identifier</label>
				 </div>
			 </div>
			 <div class="modal-footer">
				<input type="hidden" name="id" id="deviceId">
				<div class="col s12">
					<div class="col s6">
						<button style="width:100%" type="button" onclick="addDevice()" class="waves-effect waves-light btn">Save</button>
					</div>
					<div class="col s6">
						<button style="width:100%" type="button" onclick="closeModal()" class="waves-effect waves-light btn">Close</button>
					</div>
				</div>
		 	 </div>
		 </form>
	 </div>
	</div>
</div>